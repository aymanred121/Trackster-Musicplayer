<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:id="@+id/playlist_name_container"
    android:padding="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_playlist_name"
        android:textColor="@color/main_text"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/added_playlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textCursorDrawable="@color/main_text"
        android:background="@drawable/playlist_name"
        android:backgroundTint="@color/playlist_name"
        android:textColor="@color/main_text"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/cancelAddingPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background"
        android:layout_below="@id/added_playlist_name"
        android:layout_marginTop="16dp"
        android:textColor="@color/main_text"
        style="?android:attr/borderlessButtonStyle"
        android:text="cancel"/>
    <Button
        android:id="@+id/AddPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background"
        android:layout_below="@id/added_playlist_name"
        android:layout_alignParentEnd="true"
        android:textColor="@color/main_text"
        android:layout_marginTop="16dp"
        style="?android:attr/borderlessButtonStyle"
        android:text="ok"/>
</RelativeLayout>