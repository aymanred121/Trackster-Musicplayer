<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_song_item_song_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/music_note"/>

    <TextView
            android:id="@+id/home_song_item_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/home_song_item_song_cover"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Song name"
            android:layout_marginEnd="32dp"/>

    <TextView
            android:id="@+id/home_song_item_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_song_item_song_name"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/home_song_item_song_cover"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Artist"
            android:layout_marginEnd="32dp"
            android:textColor="@android:color/darker_gray"/>

</RelativeLayout>